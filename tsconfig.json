{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "lib": [
      "dom",
      "es2017",
      "esnext"
    ],
    "outDir": "./dist",
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "moduleResolution": "node",
    "typeRoots": [
      "node_modules/@types",
      "src/typings"
    ],
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,

    "pretty": true,

    "experimentalDecorators": true
    // "emitDecoratorMetadata": true
  },

  // "exclude": ["src/**/*.test.ts", "src/tests"]
}